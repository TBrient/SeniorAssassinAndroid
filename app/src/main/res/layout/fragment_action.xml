<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hacs.whs.com.seniorassassin.ActionFragment"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/action_assassinate_card"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        app:contentPadding="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:text="@string/current_target_text"
                android:layout_height="wrap_content"
                android:id="@+id/reveal_target_text"
                android:textAlignment="center"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_width="250dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="@string/assassinate_caps"
                    android:layout_width="match_parent"
                    android:id="@+id/assassinate_target"
                    android:layout_height="match_parent"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorTertiary" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/action_confirm_death_card"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        app:contentPadding="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <Button
                android:text="@string/confirm_death"
                android:layout_width="match_parent"
                android:id="@+id/confirm_death"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorTertiary"
                android:layout_weight="1" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/action_stats_card"
        app:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        app:contentPadding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/static_status"
                    android:layout_weight="1"
                    android:textAlignment="textEnd" />

                <TextView
                    android:text="ALIVE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/variable_status"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/time_alive"
                    android:layout_height="wrap_content"
                    android:id="@+id/static_time_alive"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp" />

                <TextView
                    android:text="14:10:20"
                    android:layout_height="wrap_content"
                    android:id="@+id/variable_time_alive"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/leading_kill_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/static_leading_kc"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:paddingTop="10dp" />

                <TextView
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/variable_leading_kc"
                    android:layout_weight="1"
                    android:paddingTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="@string/your_kill_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/static_user_kc"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:paddingTop="10dp" />

                <TextView
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/variable_user_kc"
                    android:layout_weight="1"
                    android:paddingTop="10dp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
